generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

 model category{
  id Int @id @default(autoincrement())
  name String
  image String
  description String
  taxApplicability Boolean
  taxNumber Int
  taxType String
  subCategory subCategory[]

 }

 model subCategory{
   id Int @id @default(autoincrement())
   name String
  image String
  description String
  taxApplicability Boolean
  taxNumber Int
  categoryList   category    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  
  items items[]

 }

 model items {
     id Int @id @default(autoincrement())
     name String
    image String
    description String
    taxApplicability Boolean
    taxNumber Int
    baseAmount Int
    discount Int
    totalAmount Int 
    subcategoryList   subCategory    @relation(fields: [subcategoryId], references: [id])
    subcategoryId  Int

 }
  
